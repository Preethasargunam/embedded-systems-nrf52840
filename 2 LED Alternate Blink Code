#include <stdint.h>
#include <stdbool.h>
#include "boards.h"
#include "nrf_delay.h"

int main(void)
{
    // Initialize all LEDs
    bsp_board_init(BSP_INIT_LEDS);

    while (1)
    {
        // LED1 ON, LED2 OFF
        bsp_board_led_on(0);
        bsp_board_led_off(1);
        nrf_delay_ms(500);

        // LED1 OFF, LED2 ON
        bsp_board_led_off(0);
        bsp_board_led_on(1);
        nrf_delay_ms(500);
    }
}
