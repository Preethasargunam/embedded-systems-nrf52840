#include <stdint.h>
#include <stdbool.h>
#include "boards.h"
#include "nrf_delay.h"

int main(void)
{
    bsp_board_init(BSP_INIT_LEDS);

    while (1)
    {
        for (uint8_t count = 0; count < 16; count++)
        {
            // LED0
            if (count & (1 << 0))
                bsp_board_led_on(0);
            else
                bsp_board_led_off(0);

            // LED1
            if (count & (1 << 1))
                bsp_board_led_on(1);
            else
                bsp_board_led_off(1);

            // LED2
            if (count & (1 << 2))
                bsp_board_led_on(2);
            else
                bsp_board_led_off(2);

            // LED3
            if (count & (1 << 3))
                bsp_board_led_on(3);
            else
                bsp_board_led_off(3);

            nrf_delay_ms(500);
        }
    }
}
