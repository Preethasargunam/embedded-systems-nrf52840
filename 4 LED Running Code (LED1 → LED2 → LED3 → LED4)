#include <stdint.h>
#include <stdbool.h>
#include "boards.h"
#include "nrf_delay.h"

int main(void)
{
    // Initialize LEDs
    bsp_board_init(BSP_INIT_LEDS);

    while (1)
    {
        // LED1
        bsp_board_led_on(0);
        bsp_board_led_off(1);
        bsp_board_led_off(2);
        bsp_board_led_off(3);
        nrf_delay_ms(300);

        // LED2
        bsp_board_led_off(0);
        bsp_board_led_on(1);
        bsp_board_led_off(2);
        bsp_board_led_off(3);
        nrf_delay_ms(300);

        // LED3
        bsp_board_led_off(0);
        bsp_board_led_off(1);
        bsp_board_led_on(2);
        bsp_board_led_off(3);
        nrf_delay_ms(300);

        // LED4
        bsp_board_led_off(0);
        bsp_board_led_off(1);
        bsp_board_led_off(2);
        bsp_board_led_on(3);
        nrf_delay_ms(300);
    }
}
